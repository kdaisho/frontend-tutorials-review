<div class="reviewer">
    <h2 class="reviewer__title">Leave a review!</h2>
    <form id="reviewer" action="/reviews/{{@root.course._id}}" method="POST">
        <textarea class="reviewer__text required" name="text" placeholder="Do you like {{@root.course.course}} course?" required></textarea>
        <div class="reviewer__meta">
            <div class="reviewer__stars">
                {{#each @root.h.arrayFive}}
                    <input type="radio" id="star{{this}}" name="rating" value="{{this}}" class="rating">
                    <label for="star{{this}}"> #{{this}} Stars</label>
                {{/each}}
            </div>
            <input type="submit" class="button" value="Submit Review" style="margin-top: 2rem;"/>
        </div>
    </form>
</div>