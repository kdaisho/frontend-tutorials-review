<div class="container contents-center edit">
    <h2 class="pageTitle">{{title}}</h2>
    <form action="/account" class="form" method="POST">
        <label for="name">Name</label>
        <input type="text" name="name" value="{{@root.user.name}}">
        <label for="email">Email</label>
        <input type="text" name="email" value="{{@root.user.email}}">
        <input type="submit" class="button" value="Update My Account">
    </form>
</div>