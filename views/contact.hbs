<div class="container contents-center edit">
    <h2 class="pageTitle">{{title}}</h2>
    <form action="/contact/send" class="form" method="POST">
        <label for="name">Name</label>
        <input type="text" name="name" value="{{#if user}}{{user.name}}{{/if}}" required>
        <label for="address" class="honey">Address</label>
        <input type="text" class="honey" name="address">
        <label for="message">Message</label>
        <textarea name="message"></textarea>
        <div class="receiveCopy">
            <input type="checkbox" id="receiveCopy" name="receiveCopy">
            <label for="receiveCopy" class="checkbox">I want to receive a copy</label>
        </div>
        <input type="submit" class="button" value="Send">
    </form>
</div>